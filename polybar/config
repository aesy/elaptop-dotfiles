modules-right = wlan network date time

tray-position = none
tray-detached = true


[module/bspwm]

type = internal/bspwm
pin-workspaces = true
strip-wsnumbers = true
enable-scroll = false

label-unfocused-foreground = #afafaf
label-focused-foreground = #c5a9f9
label-urgent-foreground = #ff0000


[module/time]

type = internal/date
interval = 1.0
date =  󱑍 %H:%M


[module/date]

type = internal/date
date = 󰸗 %e %B - %A
label = %date%


[module/battery]

type = internal/battery
battery = BAT0
poll-interval = 5
full-at = 95

label-discharging = %percentage%%
label-charging = 󰂄 %percentage%%
label-full = %percentage%%

format-discharging = %{A3:alacritty --command ytop:} <ramp-capacity> <label-discharging> %{A}
format-full = %{A3:alacritty --command ytop:} <ramp-capacity> <label-full> %{A}
format-charging = %{A3:alacritty --command ytop:} <label-charging> %{A}

ramp-capacity-0 = 󰂃
ramp-capacity-1 = 󰁻
ramp-capacity-2 = 󰁾
ramp-capacity-3 = 󰂀
ramp-capacity-4 = 󰁹


[module/pulseaudio]

type = internal/pulseaudio
format-volume = %{A3:alacritty --command pulsemixer:} <ramp-volume> <label-volume> %{A}
label-muted = 󰖁 0%
enable-scroll = true

ramp-volume-0 = 󰕿
ramp-volume-1 = 󰖀
ramp-volume-2 = 󰕾


[module/monitorbacklight]

type = internal/xbacklight
format = <ramp> <label>
label = %percentage%%
