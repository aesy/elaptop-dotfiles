[module/xwindow]

type = internal/xwindow
label = 󰘔 %title%

[module/temperature]

type = internal/temperature
label = 󱃂 %temperature-c%


[module/keyboardbacklight]

type = custom/script
format = 󰌓 <label>
label = %output%%
interval = 1

exec = light -Gs "sysfs/leds/asus::kbd_backlight" | xargs printf "%.0f\n" $p
scroll-up = light -Ars "sysfs/leds/asus::kbd_backlight" 1
scroll-down = light -Urs "sysfs/leds/asus::kbd_backlight" 1
