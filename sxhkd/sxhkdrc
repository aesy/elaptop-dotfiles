# terminal
super + t
	alacritty

# explorer
super + e
	alacritty -e ranger

# browser
super + b
	firefox-developer-edition

# calculator
super + c
	speedcrunch

# notication center
super + a
	kill -s USR1 $(pidof deadd-notification-center)

# IDE
super + i
	intellij-idea-ultimate-edition

# application launcher
super + @space
	rofi -show drun -theme ~/.config/rofi/easy

# window launcher
super + alt + @space
	rofi -show window -theme ~/.config/rofi/easy

# lock screen
super + l
    dm-tool lock

{XF86AudioLowerVolume, XF86AudioRaiseVolume}
	pactl set-sink-volume @DEFAULT_SINK@ {-,+} 5%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

{XF86MonBrightnessUp,XF86MonBrightnessDown}
	light -{A,U} 5

{XF86KbdBrightnessUp,XF86KbdBrightnessDown}
	sudo asus-kbd-backlight {up,down}

{XF86AudioPlay,XF86AudioStop,XF86AudioNext,XF86AudioPrev}
	playerctl {play-pause,stop,next,previous}

function + {Up,Down,Right,Left}
	playerctl {play-pause,stop,next,previous}

# Take full screenshot
Print
	flameshot gui

# make sxhkd reload its configuration files:
super + r
	pkill -USR1 -x sxhkd
	polybar-msg cmd restart

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }Escape
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + f
	bspc desktop -l next

# toggle floating
super + ctrl + @space
	bspc node -t '~{floating}'

# toggle taskbar
super + ctrl + p
	polybar-msg cmd toggle

# set the node flags
super + ctrl + {m,l,s,p}
	bspc node -g {marked,locked,sticky,private}

# focus the node in the given direction
super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

# swap the node with the node in the given direction
super + shift + {Left,Down,Up,Right}
	bspc node -s {west,south,north,east}

# focus the next/previous node in the current desktop
super + {comma,period}
	bspc node -f {prev,next}.local.window

# focus the next/previous desktop in the current monitor
super + shift + {comma,period}
	bspc desktop -f {prev,next}.local.window

# focus the last node/desktop
super + {_,alt} + Tab
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# preselect the direction
super + alt + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + shift + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused desktop
~Escape
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

super + ctrl + {Left,Down,Up,Right}
	$HOME/.config/bspwm/bspwm_resize.sh {west,south,north,east}

# move a floating window
super + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
